
@model StudentInfo.Users.Dto.SemesterCourse

@{
    Layout = "";
}

<div class="modal-header">
    <h4 class="modal-title">@Model.Course.Code - @Model.Course.Name</h4>
    <h6>Instructor: </h6>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-xs-8">
            <label for="dropdownIns">Select Instructor</label>
            @Html.DropDownList("Instructors", StudentInfo.WebClient.Helpers.Helper.GetTeachers(), new { @class= "form-control"})
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Save" class="btn btn-success" />
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
</div>