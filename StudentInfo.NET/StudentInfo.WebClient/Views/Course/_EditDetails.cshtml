@model StudentInfo.Users.Dto.Course

<div class="modal-header">
    <h4 class="modal-title">@Model.Code - @Model.Name</h4>
</div>
<div id="errorContainer" class="alert alert-danger" style="display: none">
    Please fix the following errors:
    <div id="errors"></div>
</div>
<div class="modal-body">
    <div class="form-horizontal" role="form">
        @using (Ajax.BeginForm("Edit", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "processResult" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Code)

            @*<div class="form-group">
                @Html.LabelFor(x => x.Code, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control" })
                </div>
            </div>*@
                <div class="form-group">
                    @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.NumberOfCredits, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(x => x.NumberOfCredits, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Level, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(x => x.Level, new { @class = "form-control" })
                    </div>
                </div>

                <div class="modal-footer">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
        }
    </div>
</div>