@model StudentInfo.Dto.Payment

@{ 
    Layout = "";
}
<div class="modal-header">
    <h4 class="modal-title">@Model.Term - @Model.Date.Year Transactions</h4>
</div>

<div class="modal-body">

    @if (Model.Transactions != null && Model.Transactions.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Transaction ID</th>
                    <th>Card Provider</th>
                    <th>Amount</th>
                    <th>Card Number</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Transactions)
                {
                    <tr>
                        <td>@item.Id.ToString().Substring(0, 8)</td>
                        <td>@item.PaymentMethod</td>
                        <td>$@item.Amount</td>
                        <td>xxxx-xxxx-xxxx-@item.CardNumber</td>
                        <td>@item.Date</td>
                    </tr>
                }

                <tr>
                    <td><strong>Total</strong></td>
                    <td></td>
                    <td><strong>$@Model.TotalPaid</strong></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>

        <p class="bg-info">Please note that we do not store your credit card information, once the transaction is processed, only the last four digits are stored.</p>
    }
    else
    {
        @Html.Label("Sorry, no transactions have been made.")
    }

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>