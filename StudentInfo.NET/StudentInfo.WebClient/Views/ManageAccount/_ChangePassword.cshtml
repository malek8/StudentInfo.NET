@model StudentInfo.WebClient.Models.ChangePasswordModel

<div class="modal-header">
    <h4 class="modal-title">Change Password</h4>
</div>
<div id="passwordChangeErrorContainer" class="alert alert-danger" style="display: none">
    Please fix the following errors:
    <div id="passwordChangeErrors"></div>
</div>
<div class="modal-body">
    <div class="alert alert-warning">
        <strong>Warning!</strong> You will be signed off when password is changed successfully.
    </div>
    <div class="form-horizontal" role="form">
        @using (Ajax.BeginForm("ChangePassword", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "processPasswordChangeResult" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(x => x.CurrentPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(x => x.CurrentPassword, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" value="Save" class="btn btn-success" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        }
    </div>
</div>